<style>
  .center {
    text-align: center;
    vertical-align: middle;
  }
</style>

<div class="panel panel-default">
  <div class="panel-heading"><h1 class="inline">Transactions</h1></div>
  <div class="panel-body">
    <table class="table clickable">
      <thead>
      <tr>
        <th></th>
        <th>Date</th>
        <th>Value</th>
        <th>Status</th>
        <th></th>
      </tr>
      </thead>
      <tbody id="transaction_list">
      </tbody>
    </table>
    <div class="col-md-12 text-center">
      <ul class="pagination pagination-lg pager" id="transaction_pager"></ul>
    </div>
    <div id="txLoadingWrapper">
      <div id="loadAllTransactionsDiv" style="text-align: center" hidden="hidden"><a class="text-muted" href="javascript:loadAllTransactions();">Load all</a></div>
      <div id="tx_loading_notification" style="text-align: center" class="text-muted center">
        <i class="fa fa-spinner fa-spin center" style="font-size:24px"></i>
        <span class="center" id="transactionLoadStatus" style="padding-left: 3px"></span>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" tabindex="-1" role="dialog" id="transactionModal">
  <div class="modal-dialog modal-wide" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Transaction</h4>
      </div>
      <div class="modal-body">
        <%= render 'transaction_view' %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn-link" data-dismiss="modal" aria-label="Close">Close</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->