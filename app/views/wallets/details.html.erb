<script>
    $( document ).ready(function() {
        $("#loading").spin({
            color: '#777',
            top: '40%',
            length: 20,
            width: 15,
            radius: 30
        });

        initOptions();
    });
</script>

<div><%= link_to "Back to wallet", wallets_show_path %></div>
<br>
<div id="wallet_options_notifications"></div>

<ul class="nav nav-tabs">
  <li role="presentation" class="active"><a data-toggle="tab" href="#addresses"><span class="glyphicon glyphicon-list"></span>  Addresses</a></li>
  <li role="presentation"><a data-toggle="tab" href="#backup"><span class="glyphicon glyphicon-save"></span>  Backup</a></li>
  <li role="presentation"><a data-toggle="tab" href="#custom_send"><span class="glyphicon glyphicon-send"></span>  Advanced transfer</a></li>
</ul>

<div class="tab-content">
  <div id="addresses" class="tab-pane active">
    <div id="loading" ><p class="text-muted">Loading addresses...</p></div>
    <div id="addresses_div" hidden="hidden">
      <table class="table fixed-table">
        <thead>
        <tr>
          <th style="width: 5em">Index</th>
          <th>Address</th>
          <th style="width: 6em">Balance</th>
        </tr>
        </thead>
        <tbody id="address_list">
        </tbody>
      </table>
      <div id="loadAllTransactionsDiv" style="text-align: center"><a class="text-muted" href="javascript:loadAddresses(true);">Load all</a></div>
    </div>
  </div>

  <div id="backup" class="tab-pane">
    <div style="padding-top: 2em;padding-bottom: 0.5em;"><button class="btn btn-primary" onclick="onDownloadBackupClick()">Download backup</button></div>
    <div class="text-muted">This will download your seed as a text file. Keep it somewhere safe</div>
  </div>

  <div id="custom_send" class="tab-pane">
    <%= render 'custom_send' %>
  </div>
</div>