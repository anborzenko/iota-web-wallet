<script>
    $(document).on('turbolinks:load', function() {
        // Because turbolinks breaks the normal jquery behaviour, this will fire for all pages after the wallet has been visited
        // Only want to proceed it the current page is wallet/show
        if (window.location.href.indexOf('nodes/index') === -1){
            return;
        }

        loadNodeInfo(onGetNodeInfoFinished);
        $(document).find('#node-data').hide();
        $("#loading").spin({
            color: '#777',
            top: '40%',
            length: 20,
            width: 15,
            radius: 30
        });
    });
</script>

<div id="node-status"></div>

<div id="loading" ><p class="text-muted">Loading node...</p></div>

<div id="node-data">
  <h1>Node information</h1>
  <table class="table" id="node-info">
    <tbody id="node_info_table">
    </tbody>
  </table>
</div>
