<!DOCTYPE html>
<html>
  <head>
    <title>IOTA Wallet</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
  </head>

  <body>
    <script>
        $(document).ready(function() {
            if (isLoggedIn()){
                $('#main_menu_nav').append("<li role='presentation' ><a href='javascript:signout();' ><span class='glyphicon glyphicon-log-out'></span></a></li>");
            }
        });
    </script>

    <div class="container">
      <div class="header clearfix">
        <nav>
          <ul id="main_menu_nav" class="nav nav-pills pull-right">
            <li role="presentation" class=<%= 'active' if current_page?(root_path) %>><%= link_to "Home", root_path %></li>
            <li role="presentation" class=<%= 'active' if current_page?(wallets_show_path) %>><%= link_to "Wallet", wallets_show_path %></li>
            <li role="presentation" class=<%= 'active' if current_page?(page_help_path) %>><%= link_to "Help", page_help_url %></li>
            <li role="presentation" class=<%= 'active' if current_page?(page_about_path) %>><%= link_to "About", page_about_url %></li>
          </ul>
        </nav>
        <h3 class="text-muted">IOTA Wallet</h3>
      </div>

      <div class="main-content">
        <%= yield %>
      </div>

      <footer class="footer">
        <p>My footer</p>
      </footer>

    </div> <!-- /container -->
  </body>
</html>
